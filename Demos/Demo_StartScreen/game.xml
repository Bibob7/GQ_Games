<?xml version="1.0" encoding="UTF-8"?>

<game name="StartScreen Demo" xmlformat="5">

	<!-- First StartScreen Mission does NOT have specified a duration attribute. 
		Hence, the default value of 5000ms is used. -->
	<mission type="StartAndExitScreen" id="screen_1"
		image="drawable/StartScreen1.jpg">
		<onEnd>
			<rule>
				<action type="StartMission" id="screen_2" />
			</rule>
		</onEnd>
	</mission>

	<!-- This is a very shortly shown screen: duration is set to just 1000ms. -->
	<mission type="StartAndExitScreen" id="screen_2"
		image="drawable/StartScreen2.jpg" duration="1000">
		<onEnd>
			<rule>
				<action type="StartMission" id="screen_3" />
			</rule>
		</onEnd>
	</mission>

	<!-- This is a longer lasting screen: duration is set to just 10000ms. -->
	<mission type="StartAndExitScreen" id="screen_3"
		image="drawable/StartScreen3.jpg" duration="10000">
	</mission>
</game>
