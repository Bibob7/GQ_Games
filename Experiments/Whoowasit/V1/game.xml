							<string>Animal_B</string>
						</eq>
						<eq>
							<var>Animal_B_Full</var>
							<num>1</num>
						</eq>
					</and>
				</if>
				<action
					type="StartMission"
					id="Animal_B_Full" />
			</rule>
			<!-- -->
			<!-- RULE LEADING TO: CHEST A With Key -->
			<rule>
				<if>
					<and>
						<eq>
							<var>$_Game_Action_Scanner.result</var>
							<string>Chest_A</string>
						</eq>
						<geq>
							<var>NumberOfKeys</var>
							<num>1</num>
						</geq>
					</and>
				</if>
				<action
					type="StartMission"
					id="Chest_A__With_Key" />
			</rule>
			<!-- -->
			<!-- RULES LEADING TO: CHEST B With Key -->
			<rule>
				<if>
					<and>
						<eq>
							<var>$_Game_Action_Scanner.result</var>
							<string>Chest_B</string>
						</eq>
						<geq>
							<var>NumberOfKeys</var>
							<num>1</num>
						</geq>
					</and>
				</if>
				<action
					type="StartMission"
					id="Chest_B__With_Key" />
			</rule>
			<!-- -->
			<!-- RULE LEADING TO: some CHEST without any Key -->
			<rule>
				<if>
					<and>
						<eq>
							<var>$_Game_Action_Scanner.result</var>
							<string>Chest_A</string>
						</eq>
						<eq>
							<var>NumberOfKeys</var>
							<num>0</num>
						</eq>
					</and>
				</if>
				<action
					type="StartMission"
					id="Chest__No_Key" />
			</rule>
		</onEnd>
	</mission>
