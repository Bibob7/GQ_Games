						<num>1</num>
					</value>
				</action>
				<!-- GET a key: -->
				<action
					type="IncrementVariable"
					var="NumberOfKeys" />
			</rule>
		</onSuccess>
		<!-- TODO: onFail Sound abspielen der Unbehagen ausdrückt -->
