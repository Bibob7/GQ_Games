					type="SetVariable"
				>
					<!-- 2 means it is taken and given to the animal -->
					<value>
						<num>2</num>
					</value>
				</action>
				<action
					var="Animal_A_Full"
					type="SetVariable"
				>
					<!-- 1 means animal is full;
						THIS IS REDUNDANT: ONE COULD USE FOOD_B
						INSTEAD, BUT IT IS CLEARER AND MORE RESUSABLE -->
