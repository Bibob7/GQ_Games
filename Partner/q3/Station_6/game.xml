<?xml version="1.0" encoding="UTF-8"?>
<game
	name="RadioRanzen Station 6"
	xmlformat="5"
>
	<mission
		id="M_S6_localization"
		endbutton="Angekommen ..."
		image="drawable/logo_02_roboter.png"
		type="NPCTalk"
	>
		<onStart>
			<rule>
				<action type="Vibrate" />
				<action
					file="sound/radiobot_angekommen.mp3"
					type="PlayAudio" />
			</rule>
		</onStart>
		<onEnd>
			<rule>
				<action
					id="M_S6_npc"
					type="StartMission" />
			</rule>
		</onEnd>
		<dialogitem> Wenn ihr an der nächsten Station angekommen seid, könnt
			ihr die Mission starten indem ihr unten auf den Knopf drückt.
		</dialogitem>
	</mission>
	<mission
		id="M_S6_npc"
		image="drawable/logo_02_roboter.png"
		type="NPCTalk"
	>
		<onStart>
		</onStart>
		<onEnd>
			<rule>
				<action
					id="M_S6_qr_1"
					type="StartMission" />
			</rule>
		</onEnd>
		<dialogitem sound="sound/radiobot_station6_frage_teil_1.mp3"> Du hörst Töne aus dem Radio, aber wie
			funktioniert das eigentlich?
		</dialogitem>
		<dialogitem sound="sound/radiobot_station6_frage_teil_2.mp3"> Die Tonaufzeichnung hat sich in den
			letzten Jahren sehr verändert. Vor euch seht ihr drei verschiedene
			Aufnahmegeräte.
		</dialogitem>
		<dialogitem sound="sound/radiobot_station6_frage_teil_3.mp3">Eure letzte Aufgabe ist, die
			Aufnahmegeräte in die richtige zeitliche Reihenfolge zu bringen.
		</dialogitem>
		<dialogitem sound="sound/radiobot_station6_frage_teil_4.mp3">Scannt die Geräte in der richtigen
			zeitlichen Reihenfolge ein.
		</dialogitem>
	</mission>
	<mission
		id="M_S6_qr_1"
		taskdescription="Scannt bitte den QR Code des ältesten Aufnahmegeräts."
		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S5_Bandmaschine"
		if_right="Richtig!"
		if_wrong="Ne ne, das stimmt nicht."
		initial_image="drawable/logo_02_roboter.png"
		mode="product"
		type="QRTagReading"
	>
		<onStart>
			<rule>
				<action
					file="sound/radiobot_station6_qr_1_aufforderung.mp3"
					type="PlayAudio" />
			</rule>
		</onStart>
		<onSuccess>
			<rule>
				<action
					file="sound/radiobot_richtig.mp3"
					type="PlayAudio" />
			</rule>
		</onSuccess>
		<onFail>
			<rule>
				<action
					file="sound/radiobot_falsch_nein.mp3"
					type="PlayAudio" />
			</rule>
		</onFail>
		<onEnd>
			<rule>
				<action
					id="M_S6_qr_2"
					type="StartMission" />
			</rule>
		</onEnd>
	</mission>
	<mission
		id="M_S6_qr_2"
		taskdescription="Scannt bitte den QR Code des nächst jüngeren Aufnahmegeräts."
		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S5_Kassettengerät"
		if_right="Richtig!"
		if_wrong="Ne ne, das stimmt nicht."
		initial_image="drawable/logo_02_roboter.png"
		mode="product"
		type="QRTagReading"
	>
		<onStart>
			<rule>
				<action
					file="sound/radiobot_station6_qr_2_aufforderung.mp3"
					type="PlayAudio" />
			</rule>
		</onStart>
		<onEnd>
			<rule>
				<action
					id="M_S6_qr_3"
					type="StartMission" />
			</rule>
		</onEnd>
		<onSuccess>
			<rule>
				<action
					file="sound/radiobot_richtig.mp3"
					type="PlayAudio" />
			</rule>
		</onSuccess>
		<onFail>
			<rule>
				<action
					file="sound/radiobot_falsch_nein.mp3"
					type="PlayAudio" />
			</rule>
		</onFail>
	</mission>
	<mission
		id="M_S6_qr_3"
		taskdescription="Scannt bitte den QR Code des jüngsten Aufnahmegeräts."
		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S5_DigitalRecorder"
		if_right="Richtig!"
		if_wrong="Ne ne, das stimmt nicht."
		initial_image="drawable/logo_02_roboter.png"
		mode="product"
		type="QRTagReading"
	>
		<onStart>
			<rule>
				<action
					file="sound/radiobot_station6_qr_3_aufforderung.mp3"
					type="PlayAudio" />
			</rule>
		</onStart>
		<onEnd>
			<rule>
				<action
					id="M_S6_outro"
					type="StartMission" />
			</rule>
		</onEnd>
		<onSuccess>
			<rule>
				<action
					file="sound/radiobot_richtig.mp3"
					type="PlayAudio" />
			</rule>
		</onSuccess>
		<onFail>
			<rule>
				<action
					file="sound/radiobot_falsch_nein.mp3"
					type="PlayAudio" />
			</rule>
		</onFail>
	</mission>
	<mission
		id="M_S6_outro"
		endbuttontext="Zum Startpunkt zurück ..."
		image="drawable/logo_02_roboter.png"
		type="NPCTalk"
	>
		<onStart>
			<rule>
				<action type="Vibrate" />
			</rule>
		</onStart>
		<dialogitem sound="sound/radiobot_station6_outro_teil_1.mp3"> Glückwunsch!! Ihr habt es geschafft und
			alle Zahlen für die Frequenz des Radioranzens zurückerobert.
		</dialogitem>
		<dialogitem sound="sound/radiobot_station6_outro_teil_2.mp3">Die letzte Kanalzahl lautet: 7
		</dialogitem>
		<dialogitem sound="sound/radiobot_station6_outro_teil_3.mp3">Nun schnell zurück zum Radioranzen
			(Startpunkt) und die Frequenz eingeben.
		</dialogitem>
	</mission>
</game>