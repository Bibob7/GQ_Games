<?xml version="1.0" encoding="UTF-8"?><game	name="RadioRanzen Station 2"	xmlformat="5">	<mission		id="M_S2_localization"		endbutton="Angekommen ..."		image="drawable/logo_02_roboter.png"		type="NPCTalk"	>		<onStart>			<rule>				<action type="Vibrate" />				<action					file="sound/radiobot_angekommen.mp3"					type="PlayAudio" />			</rule>		</onStart>		<onEnd>			<rule>				<action					id="M_S2_intro"					type="StartMission" />			</rule>		</onEnd>		<dialogitem>Wenn ihr an der nächsten Station angekommen seid, könnt			ihr die Mission starten indem ihr unten auf den Knopf drückt.		</dialogitem>	</mission>	<mission		id="M_S2_intro"		endbuttontext="Zum QR Code ..."		image="drawable/logo_02_roboter.png"		type="NPCTalk"	>		<onEnd>			<rule>				<action					id="M_S2_qr_umfrage"					type="StartMission" />			</rule>		</onEnd>		<dialogitem sound="sound/radiobot_station2_teil1.mp3"> Im Programm von Radioranzen gibt es			verschiedene journalistische Elemente. Aber welche?		</dialogitem>		<dialogitem sound="sound/radiobot_station2_teil2.mp3">Zu einem guten Radio gehören			journalistische Elemente wie: Umfrage, Interview, Kommentar, Feature,			gebauter Beitrag und Reportage.		</dialogitem>		<dialogitem sound="sound/radiobot_station2_teil3.mp3">Aber was ist was? Scannt den QR Code ein			und ordnet die Hörbeispiele richtig zu.		</dialogitem>	</mission>	<mission		id="M_S2_qr_umfrage"		buttontext="QRCode scannen ..."		endbuttontext="Zur Frage ..."		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S2_Umfrage"		if_right="Erkennst du diese journalistische Form? Drücke den Button unten um zur Frage zu kommen ..."		if_wrong="Das ist nicht der richtige! Bitte scanne jetzt Code EINS."		initial_image="drawable/logo_02_roboter.png"		mode="product"		taskdescription="Scanne den ersten QR Code ..."		type="QRTagReading"	>		<onEnd>			<rule>				<action					id="M_S2_qa_umfrage"					type="StartMission" />			</rule>		</onEnd>		<onSuccess>			<rule>				<action					file="sound/umfrage.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onFail>			<rule>				<action					file="sound/radiobot_falsch_klapptnicht.mp3"					type="PlayAudio" />			</rule>		</onFail>	</mission>	<mission		id="M_S2_qa_umfrage"		loopUntilSuccess="true"		type="MultipleChoiceQuestion"	>		<onStart>			<rule>				<action type="Vibrate" />			</rule>		</onStart>		<onSuccess>			<rule>				<action					file="sound/radiobot_richtig.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onEnd>			<rule>				<action					id="M_S2_qr_interview"					type="StartMission" />			</rule>		</onEnd>		<question>			<questiontext> Was für eine journalistische Darstellungsform habt ihr				gehört?			</questiontext>			<answer				correct="1"				onChoose="Ja, genau."			> Umfrage			</answer>			<answer				correct="0"				onChoose="Nein, das war keine Nachricht."			> Nachricht			</answer>			<answer				correct="0"				onChoose="Nein, das war keine Reportage."			> Reportage			</answer>		</question>	</mission>	<mission		id="M_S2_qr_interview"		buttontext="QRCode scannen ..."		endbuttontext="Zur Frage ..."		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S2_Interview"		if_right="Erkennst du diese journalistische Form? Drücke den Button unten um zur Frage zu kommen ..."		if_wrong="Das ist nicht der richtige! Bitte scanne jetzt Code ZWEI."		initial_image="drawable/logo_02_roboter.png"		mode="product"		taskdescription="Scanne den zweiten QR Code ..."		type="QRTagReading"	>		<onEnd>			<rule>				<action					id="M_S2_qa_interview"					type="StartMission" />			</rule>		</onEnd>		<onSuccess>			<rule>				<action					file="sound/interview.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onFail>			<rule>				<action					file="sound/radiobot_falsch_klapptnicht.mp3"					type="PlayAudio" />			</rule>		</onFail>	</mission>	<mission		id="M_S2_qa_interview"		loopUntilSuccess="true"		type="MultipleChoiceQuestion"	>		<onStart>			<rule>				<action type="Vibrate" />			</rule>		</onStart>		<onSuccess>			<rule>				<action					file="sound/radiobot_richtig.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onEnd>			<rule>				<action					id="M_S2_qr_jingle"					type="StartMission" />			</rule>		</onEnd>		<question>			<questiontext> Was für eine journalistische Darstellungsform habt ihr				gehört?			</questiontext>			<answer				correct="0"				onChoose="Nein, das war keine Umfrage."			> Umfrage			</answer>			<answer				correct="1"				onChoose="Ja, genau."			> Interview			</answer>			<answer				correct="0"				onChoose="Nein, das war kein Kommentar."			> Kommentar			</answer>		</question>	</mission>	<mission		id="M_S2_qr_jingle"		buttontext="QRCode scannen ..."		endbuttontext="Zur Frage ..."		expected_content="http://www.audiokombinat.de/ranzen/ranzen/index.htm#S2_Jingle"		if_right="Was für ein akustisches Element hast du gehört? Drücke den Button unten um zur Frage zu kommen ..."		if_wrong="Das ist nicht der richtige! Bitte scanne jetzt Code DREI."		initial_image="drawable/logo_02_roboter.png"		mode="product"		taskdescription="Scanne den dritten QR Code ..."		type="QRTagReading"	>		<onEnd>			<rule>				<action					id="M_S2_qa_jingle"					type="StartMission" />			</rule>		</onEnd>		<onSuccess>			<rule>				<action					file="sound/jingle.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onFail>			<rule>				<action					file="sound/radiobot_falsch_nein.mp3"					type="PlayAudio" />			</rule>		</onFail>	</mission>	<mission		id="M_S2_qa_jingle"		loopUntilSuccess="true"		type="MultipleChoiceQuestion"	>		<onStart>			<rule>				<action type="Vibrate" />			</rule>		</onStart>		<onSuccess>			<rule>				<action					file="sound/radiobot_richtig.mp3"					type="PlayAudio" />			</rule>		</onSuccess>		<onEnd>			<rule>				<action					id="M_S2_outro"					type="StartMission" />			</rule>		</onEnd>		<question>			<questiontext> Was für ein akustisches Element habt ihr gehört?			</questiontext>			<answer				correct="0"				onChoose="Nein, das war keine Werbung."			> Werbung			</answer>			<answer				correct="1"				onChoose="Ja, genau."			> Jingle / Promo			</answer>			<answer				correct="0"				onChoose="Nein, das war kein Feature."			> Feature			</answer>		</question>	</mission>	<mission		id="M_S2_outro"		endbuttontext="Zum Erfrischungsfoyer ..."		image="drawable/logo_02_roboter.png"		type="NPCTalk"	>		<onStart>			<rule>				<action type="Vibrate" />				<action					type="PlayAudio"					file="sound/radiobot_wegbeschreibungstation3.mp3" />			</rule>		</onStart>		<dialogitem sound="sound/radiobot_station2_gut.mp3">Gut gemacht, damit bekommt ihr die			Kanalzahl 0.		</dialogitem>		<dialogitem sound="sound/radiobot_station2_weg.mp3">Zwei Zahlen der Frequenz habt nun ihr			schon. Die nächste Aufgabe findet ihr im Erfrischungsfoyer beim			Visinale Cafe. Viel Erfolg!		</dialogitem>	</mission></game>